{#{{ dump(current) }}#}
{% set cur_prod = fn('wc_get_product', current.ID) %}
<article class="col-lg-3 col-md-6 mb-lg-0 mb-3 p-lg-0 vmw__single__related__card">
    <div class="text-primary text-center">
        <h6 class="vmw__related__card_title m-0">
            <a href="{{ fn('get_permalink', current.ID) }}" class="text-dark">
                {{ current.title }}
            </a>
        </h6>
    </div>
    <div class="card mb-5 mb-lg-0 h-100 vmw__related__card__container border-0">
        <div class="card-body d-flex flex-column">
            <figure class="text-center">
                <a href="{{ fn('get_permalink', current.ID) }}">
                    <img src="{{ current.thumbnail.src('medium') }}" alt="{{ current.title }}" class="vmw__related__image">
                </a>
            </figure>
            <div class="card-content">
                <div class="vmw__related__products__list">
                    <span class="vmw__related__products__list__land vmw__related__products__list__item border-bottom">
                        <figure>
                            {{ fn('get_field', 'icoon_land', 'option') }}
                        </figure>
                        {{ cur_prod.get_attribute('pa_land') }}
                    </span>
                    <span class="vmw__related__products__list__jaar vmw__related__products__list__item border-left border-bottom">
                        <figure>
                            CALENDAR
                        </figure>
                        {{ cur_prod.get_attribute('pa_jaar') }}
                    </span>
                    <span class="vmw__related__products__list__streek vmw__related__products__list__item border-bottom">
                        <figure>
                            REGION
                        </figure>
                        {{ cur_prod.get_attribute('pa_streek') }}
                    </span>
                    <span class="vmw__related__products__list__druif vmw__related__products__list__item border-bottom">
                        <figure>
                            GRAPE
                        </figure>
                        {{ cur_prod.get_attribute('pa_druif') }}
                    </span>
                    <span class="vmw__related__products__list__smaak vmw__related__products__list__item border-bottom">
                        <figure>
                            HEART
                        </figure>
                        {{ cur_prod.get_attribute('pa_smaak') }}
                    </span>
                    <span class="vmw__related__products__list__price vmw__related__products__list__item border-bottom">
                        &euro; {{ current._price| round(2, 'ceil') | replace({'.': ','}) }}
                    <span>
                </div>
            </div>
            <div class="card-footer-vmw text-center mt-auto">
                {% if current.ID == fn('get_queried_object_id') %}
                    <span class="bg-tertiary p-1 d-inline-block text-white has-border-radius">
                        {{ __('Huidige keuze', 'vmw') }}
                    </span>
                {% else %}
                    <a href="{{ fn('get_permalink', current.ID) }}" class="bg-primary p-1 d-inline-block text-white has-border-radius">
                        {{ __('Selecteer', 'vmw') }}
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</article>