{% do action('vmw_before_single_attributes') %}

<table>
    <tr class="border-bottom">
        <th class="p-1">Land</th>
        <td>
            {{ product.get_attribute( 'pa_land' ) }}
        </td>
    </tr>
    <tr class="border-bottom">
        <th class="p-1">Druif</th>
        <td>
            {{ product.get_attribute( 'pa_druif' ) }}
        </td>
    </tr>
    <tr class="border-bottom">
        <th class="p-1">Jaargang</th>
        <td itemprop="releaseDate">
            {{ product.get_attribute( 'pa_jaar' ) }}
        </td>
    </tr>
    <tr>
        <th class="p-1">Smaak</th>
        <td>
            {{ product.get_attribute( 'pa_smaak' ) }}
        </td>
    </tr>
</table>