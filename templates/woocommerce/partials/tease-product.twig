{# post en product zijn beschikbaar #}
<article class="vmw__recently__visited__container p-1 text-center d-flex flex-column">
    <h5 class="product__card__title ">
        <a href="{{ fn('get_permalink', post.ID) }}" class="text-dark">
            {{ post.title }}
        </a>
    </h5>
    <section>
        <p class="p-0 m-0">
            {{ product.get_attribute('pa_jaar') }} | {{ product.get_attribute('pa_land') }}
        </p>
        <p class="p-0 m-0">
            <figure>
                <img src="{{ fn('get_field', 'pa_druif', 'option')['url'] }}" alt="{{ curr_prod.get_attribute('pa_druif') }}" />
            </figure>
            {{ product.get_attribute('pa_druif') }}
        <p>
    </section>
    <figure class="product__card__figure">
        <a href="{{ fn('get_permalink', post.ID) }}">
            <img src="{{ fn('get_the_post_thumbnail_url', post.ID, 'medium') }}" alt="{{ post.title }}" class="product__card__image">
        </a>
    </figure>
    <section class="product__card_price">
        &euro; {{ product._price| round(2, 'ceil') | replace({'.': ','}) }}
    </section>
</article>
